<%= stylesheet_link_tag 'devise' %>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input-field", autofocus: true, autocomplete: "email" %><br>

    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input-field", autocomplete: "current-password" %>

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "short-label" %><br>
  <% end %>

  <%= f.submit "Log in", class: "button" %><br>
<% end %>

<%= link_to 'Sign up', new_user_registration_path, class: "button" %>