<%= stylesheet_link_tag 'devise' %>

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :email, class: "label" %></em>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field", placeholder: "example@gmail.com" %><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div><br>
  <% end %>

  <%= f.label :password, class: "label" %></em>
  <%= f.password_field :password, class: "input-field", placeholder: "Optional (#{@minimum_password_length} characters minimum)" %><br>

  <%= f.label :password_confirmation, class: "label" %></em>
  <%= f.password_field :password_confirmation, class: "input-field", placeholder: "Optional (#{@minimum_password_length} characters minimum)" %><br>

  <div class="field">
    <%= f.label :current_password, class: "label" %></em>
    <%= f.password_field :current_password, class: "input-field", placeholder: "Confirm yourseft" %><br>
  </div>

  <div class="field">
    <%= f.file_field :avatar, class: "avatar-field" %>
    <label for="user_avatar" class="button">Upload Avatar</label><br>
  </div>
  
  <div class="actions">
    <%= f.submit "Update", class: "button" %>
  </div>
<% end %>

<h3>Cancel account?</h3>

<div><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button" %></div>

  <%= link_to 'Main page', '/', class: "button" %>