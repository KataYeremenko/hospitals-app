<%= stylesheet_link_tag 'devise' %>

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :email, class: "label" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %><br>

  <%= f.submit "Send me reset password instructions", class: "button" %><br>
<% end %>

<%= link_to 'Log in', new_user_session_path, class: "button" %>
<%= link_to 'Sign up', new_user_registration_path, class: "button" %>

