<%= stylesheet_link_tag 'form' %>

<h1> Add Doctor </h1>

<%= form_for @doctor do |f| %>
  <%= f.label :name, class: "label" %>
  <%= f.text_field :name, class: "input-field", placeholder: "Test Testov Testovich" %><br>

  <%= f.label :email, class: "label" %>
  <%= f.text_field :email, class: "input-field", placeholder: "example@gmail.com" %><br>

  <%= f.label :phone, class: "label" %>
  <%= f.text_field :phone, class: "input-field", placeholder: "+3807654321" %><br>

  <%= f.label :department_id, class: "label" %>
  <%= f.number_field :department_id, class: "input-field", placeholder: "Department ID" %><br>
  
  <%= f.label :specialty_id, class: "label" %>
  <%= f.number_field :specialty_id, class: "input-field", placeholder: "Specialty ID" %><br>


  <%= f.submit "Create", class: "button" %>

  <div id="error-message" class="large-label"></div>
<% end %>