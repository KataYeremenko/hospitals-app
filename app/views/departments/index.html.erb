<h1> View Departments </h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Hospital ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.id %></td>
        <td><%= department.name %></td>
        <td><%= department.description %></td>
        <td><%= department.hospital_id %></td>
        <td><%= link_to 'View', department_path(department) %></td>
        <td><%= link_to 'Update', edit_department_path(department) %></td>
        <td><%= button_to 'Delete', department_path(department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Department', new_department_path %>