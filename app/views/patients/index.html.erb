<%= stylesheet_link_tag 'view' %>

<h1> View Patients </h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3">Buttons</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
        <td><%= patient.name %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.address %></td>
        <td><%= link_to 'View', patient_path(patient), class: "button" %></td>
        <td><%= link_to 'Update', edit_patient_path(patient), class: "button" %></td>
        <td><%= button_to 'Delete', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="links-container">
  <%= link_to 'Add Patient', new_patient_path, class: "bottom-button" %>
  <%= link_to 'Back to Main page', '/', class: "bottom-button" %>
</div>