<h1> View Hospitals </h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.id %></td>
        <td><%= hospital.name %></td>
        <td><%= hospital.email %></td>
        <td><%= hospital.phone %></td>
        <td><%= hospital.address %></td>
        <td><%= link_to 'View', hospital_path(hospital) %></td>
        <td><%= link_to 'Update', edit_hospital_path(hospital) %></td>
        <td><%= button_to 'Delete', hospital_path(hospital), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Hospital', new_hospital_path %>