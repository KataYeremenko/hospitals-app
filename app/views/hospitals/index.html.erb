<%= stylesheet_link_tag 'view' %>

<h1> View Hospitals </h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3">Buttons</th>
    </tr>
  </thead>
  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.id %></td>
        <td><%= hospital.name %></td>
        <td><%= hospital.email %></td>
        <td><%= hospital.phone %></td>
        <td><%= hospital.address %></td>
        <td><%= link_to 'View', hospital_path(hospital), class: "button" %></td>
        <td><%= link_to 'Update', edit_hospital_path(hospital), class: "button" %></td>
        <td><%= button_to 'Delete', hospital_path(hospital), method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="links-container">
  <%= link_to 'Add Hospital', new_hospital_path, class: "bottom-button" %>
  <%= link_to 'Back to Main page', '/', class: "bottom-button" %>
</div>