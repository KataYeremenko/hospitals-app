<h1>View Hospitals</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% Hospital.all.each do |hospital| %>
      <tr>
        <td><%= hospital.id %></td>
        <td><%= hospital.name %></td>
        <td><%= hospital.email %></td>
        <td><%= hospital.phone %></td>
        <td><%= hospital.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>