<%= stylesheet_link_tag 'form' %>

<h1> Update Hospital </h1>

<%= form_for @hospital, data: { turbo: false } do |f| %>
  <div>
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input-field inline", placeholder: "Hospital name" %><br>
  </div>

  <div>
    <%= f.label :email, class: "label" %>
    <%= f.text_field :email, class: "input-field inline", placeholder: "example@gmail.com" %><br>
  </div>
  
  <div>
    <%= f.label :phone, class: "label" %>
    <%= f.text_field :phone, class: "input-field inline", placeholder: "+3807654321" %><br>
  </div>
  
  <div>
    <%= f.label :address, class: "label" %>
    <%= f.text_field :address, class: "input-field inline", placeholder: "123 Adr Street" %><br>
  </div>

  <div>
    <%= f.label :year, class: "label" %>
    <%= f.text_field :year, class: "input-field inline", placeholder: "1700-2023" %><br>
  </div>

  <div>
    <%= f.label :facility, class: "label" %>
    <%= f.text_field :facility, class: "input-field inline", placeholder: "Hospital type" %><br>
  </div>

  <div>
    <%= f.label :city, class: "label" %>
    <%= f.text_field :city, class: "input-field inline", placeholder: "c. Avdeevka" %><br>
  </div>

  <div>
    <%= f.label :rating, class: "label" %>
    <%= f.text_field :rating, class: "input-field inline", placeholder: "Rate this!" %><br>
  </div>
  <%= f.submit "Update", class: "button" %><br>

  <div id="error-message" class="large-label"></div>
<% end %>