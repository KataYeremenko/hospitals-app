<%= stylesheet_link_tag 'view' %>

<h1> View Some Hospital </h1>

<table>
	<tr>
		<td> ID: </td>
		<td> <%= @hospital.id %> </td>
	</tr>
	<tr>
		<td> Name: </td>
		<td> <%= @hospital.name %> </td>
	</tr>
	<tr>
		<td> Email: </td>
		<td> <%= @hospital.email %> </td>
	</tr>
	<tr>
		<td> Phone: </td>
		<td> <%= @hospital.phone %> </td>
	</tr>
	<tr>
		<td> Address: </td>
		<td> <%= @hospital.address %> </td>
	</tr>
</table>

<br>

<div class="links-container">
  <%= link_to 'Update', edit_hospital_path(@hospital), class: "bottom-button" %>
  <%= link_to 'Back to hospital', hospitals_path, class: "bottom-button" %>
</div>